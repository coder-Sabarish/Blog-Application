          {
            "name": "body",
            "in": "body",
            "description": "Article Content",
            "required": true,
            "schema": {
              
              "title": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "category": {
                "type": "string"
              },
              "topCategory": {
                "type": "string"
              },
              "coverImage": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
